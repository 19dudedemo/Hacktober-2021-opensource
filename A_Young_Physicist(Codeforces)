#include <bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int i, n, a, b, c, sum1=0, sum2=0, sum3=0;
    cin >> n;
    for(i=0; i<n; i++){
        cin >> a >> b >> c;
        sum1 += a;
        sum2 += b;
        sum3 += c;
    }
    if(sum1==0 && sum2==0 && sum3==0)
        cout << "YES\n";
    else
        cout << "NO\n";               
    return 0;
}
